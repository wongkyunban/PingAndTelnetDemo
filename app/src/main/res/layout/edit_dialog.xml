<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_dialog_bg">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="26sp"
        android:textColor="#373737"
        android:textStyle="bold"
        android:text="标题"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textSize="26sp"
        android:textColor="#3C3C3C"
        android:text="提示内容"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:textSize="26sp"
        android:textColor="@android:color/black"
        android:hint="输入内容"
        android:lines="1"
        android:padding="8dp"
        android:background="@drawable/edit_dialog_edit_box_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:textSize="26sp"
        android:textColor="#5A5A5A"
        android:text="取消"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        app:layout_constraintEnd_toStartOf="@id/v_line_m"/>
    <View
        android:id="@+id/v_line_m"
        android:layout_width="1dp"
        android:layout_height="68dp"
        android:background="#F5F5F5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:textSize="26sp"
        android:textColor="@android:color/holo_orange_dark"
        android:text="确定"
        android:background="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/v_line_m"
        app:layout_constraintTop_toBottomOf="@id/v_line"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>